{
    "name": "andre-moura/card-bank",
    "description": "A simple card bank management system.",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AndreMoura\\CardBank\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Andr√© Moura",
            "email": "andre.benedicto@etec.sp.gov.br"
        }
    ],
    "require": {
        "symfony/http-foundation": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89"
